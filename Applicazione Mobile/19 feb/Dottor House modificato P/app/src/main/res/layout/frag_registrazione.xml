<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.itsadmin.dottorhouse.login">


    <TextView
        android:id="@+id/registrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioAcconsento"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Registrazione"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrazione"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:ems="9"
        android:hint="Nome"
        android:gravity="center"
        android:inputType="textPersonName" />


    <ImageView
        android:id="@+id/iconNome"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/editNome"
        android:layout_toStartOf="@+id/editCognome"
        android:src="@drawable/account1" />

    <EditText
        android:id="@+id/editCognome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editNome"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editNome"
        android:hint="Cognome"
        android:gravity="center"
        android:inputType="textPersonName" />


    <ImageView
        android:id="@+id/iconCognome"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editNome"
        android:layout_toStartOf="@+id/editCognome"
        android:src="@drawable/account1" />

    <EditText
        android:id="@+id/editCitta"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editCognome"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editCognome"
        android:hint="CittÃ "
        android:gravity="center"
        android:inputType="textAutoComplete" />


    <ImageView
        android:id="@+id/iconCity"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editCognome"
        android:layout_toStartOf="@+id/editCitta"
        android:src="@drawable/city" />

    <EditText
        android:id="@+id/editData"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editCitta"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editCitta"
        android:hint="Data di nascita"
        android:gravity="center"
        android:inputType="date" />


    <ImageView
        android:id="@+id/iconData"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editCitta"
        android:layout_toStartOf="@+id/editData"
        android:src="@drawable/calendar_range" />

    <EditText
        android:id="@+id/editTelefono"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editData"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editData"
        android:hint="Telefono"
        android:gravity="center"
        android:inputType="textPersonName|phone" />


    <ImageView
        android:id="@+id/iconTel"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editData"
        android:layout_toStartOf="@+id/editTelefono"
        android:src="@drawable/cellphone_android" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTelefono"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editTelefono"
        android:hint="Email"
        android:gravity="center"
        android:inputType="textPersonName|textWebEmailAddress" />


    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editTelefono"
        android:layout_toStartOf="@+id/editEmail"
        android:src="@drawable/email" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editEmail"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editEmail"
        android:hint="Password"
        android:gravity="center"
        android:inputType="textVisiblePassword" />


    <ImageView
        android:id="@+id/iconPass"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editEmail"
        android:layout_toStartOf="@+id/editPassword"
        android:src="@drawable/lock" />

    <EditText
        android:id="@+id/editConfermaPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPassword"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editPassword"
        android:hint="Conferma paassword"
        android:gravity="center"
        android:inputType="textVisiblePassword" />

    <ImageView
        android:id="@+id/iconConPass"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editPassword"
        android:layout_toStartOf="@+id/editConfermaPassword"
        android:src="@drawable/lock" />

    <RadioButton
        android:id="@+id/radioAcconsento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editConfermaPassword"
        android:layout_below="@+id/editConfermaPassword"
        android:layout_marginTop="20dp"
        android:text="Acconsento al trattamento dei dati"
        android:textSize="10sp" />

    <Button
        android:id="@+id/buttonRegistrati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioAcconsento"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/radioAcconsento"
        android:text="Registrati" />

    <ImageButton
        android:id="@+id/goBack"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/radioAcconsento"
        android:layout_alignTop="@+id/buttonRegistrati"
        android:src="@drawable/goback" />


</RelativeLayout>
