<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.itsadmin.dottorhouse.login">


    <TextView
        android:id="@+id/registrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonRegistrati"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="Registrazione"
        android:textSize="18dp" />
    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrazione"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:ems="9"
        android:hint="Nome"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editCognome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editNome"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editNome"
        android:hint="Cognome"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editCitta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editCognome"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editCognome"
        android:hint="CittÃ "
        android:inputType="textAutoComplete" />


    <EditText
        android:id="@+id/editData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editCitta"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editCitta"
        android:hint="Data di nascita"
        android:inputType="date" />


    <EditText
        android:id="@+id/editTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editData"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editData"
        android:hint="Telefono"
        android:inputType="textPersonName|phone" />


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTelefono"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editTelefono"
        android:hint="Email"
        android:inputType="textPersonName|textWebEmailAddress" />


    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editEmail"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editEmail"
        android:hint="Password"
        android:inputType="textVisiblePassword" />


    <EditText
        android:id="@+id/editConfermaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPassword"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editPassword"
        android:hint="Conferma paassword"
        android:inputType="textVisiblePassword" />

    <RadioButton
        android:id="@+id/radioAcconsento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editConfermaPassword"
        android:layout_below="@+id/editConfermaPassword"
        android:layout_marginTop="20dp"
        android:text="Acconsento al trattamento dei dati"
        android:textSize="10sp" />

    <Button
        android:id="@+id/buttonRegistrati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioAcconsento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Registrati" />


</RelativeLayout>
