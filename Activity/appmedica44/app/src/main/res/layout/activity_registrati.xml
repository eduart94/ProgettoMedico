<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/id_titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Registrazione"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:textColor="#fafafa" />

    <EditText
        android:id="@+id/id_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_titolo"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/id_cognome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_nome"
        android:layout_marginTop="10dp"
        android:contentDescription="Cognome"
        android:ems="10"
        android:hint="Cognome"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/id_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_cognome"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/id_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_email"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/id_conferma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/id_password"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Conferma Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black" />

    <RadioButton
        android:id="@+id/id_autorizzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_conferma"
        android:layout_marginTop="15dp"
        android:text="Autorizzo al trattamento dei dati personali"
        android:textColor="#fafafa"
        android:textSize="14sp" />

    <Button
        android:id="@+id/id_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="31dp"
        android:text="Registrati" />

    <Button
        android:id="@+id/haigiaaccount"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/id_button1"
        android:layout_marginStart="25dp"
        android:text="Hai giÃ  un account?"

        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />


</RelativeLayout>
