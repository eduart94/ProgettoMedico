<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ececec">


    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Data"
        android:textSize="18sp" />

    <TextView
    android:id="@+id/citta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/data"
    android:layout_below="@+id/data"
    android:layout_marginTop="5dp"
    android:text="Citta"
    android:textSize="18sp"/>

    <TextView
        android:id="@+id/indirizzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data"
        android:layout_below="@+id/citta"
        android:layout_marginTop="5dp"
        android:text="Indirizzo"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/medico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data"
        android:layout_below="@+id/indirizzo"
        android:layout_marginTop="5dp"
        android:text="Medico"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tipologia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data"
        android:layout_below="@+id/medico"
        android:layout_marginTop="5dp"
        android:text="Tipologia"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/motivazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data"
        android:layout_below="@+id/tipologia"
        android:layout_marginTop="5dp"
        android:text="Motivazione"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnRecensici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/data"
        android:layout_marginEnd="16dp"
        android:text="Recensisci" />

    <TextView
        android:id="@+id/emailMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/motivazione"
        android:textSize="18sp"
        android:text="Email Medico"
        android:layout_marginBottom="5dp"/>


</RelativeLayout>