<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textTipologia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Tipologia Medico"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textTipologia"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/textTipologia"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textCitta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Città"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/citta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignStart="@+id/textCitta"
        android:layout_below="@+id/textCitta"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Città" />

    <Button
        android:id="@+id/cerca"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="CERCA" />



    <ListView
        android:id="@+id/lista_medico"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cerca"
        android:layout_marginTop="15dp" />




</RelativeLayout>