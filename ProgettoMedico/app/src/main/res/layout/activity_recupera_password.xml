<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eduartbiba.progettomedico.RecuperaPassword">

    <TextView
        android:id="@+id/recuperapassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Recupera Password"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/messaggioinseriscimail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci la tua mail per resettare la password"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="57dp" />

    <EditText
        android:id="@+id/mailrecupera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ex: mariorossi@gmail.it"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="93dp" />

    <Button
        android:id="@+id/invia"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invia"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="163dp" />
</android.support.constraint.ConstraintLayout>
